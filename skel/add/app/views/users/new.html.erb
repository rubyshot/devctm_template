<h1>Register</h1>

<% semantic_form_for @user, :url => user_path(:secure => true) do |f| -%>
  <%= f.error_messages %>
  <% f.inputs do -%>
    <%= f.input :login %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :time_zone, :priority_zones => ActiveSupport::TimeZone.us_zones %>
  <% end -%>
  <p>
    <%= f.submit 'Register' %>
  </p>
<% end -%>
