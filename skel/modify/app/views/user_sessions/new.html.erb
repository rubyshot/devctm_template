<h1>Login</h1>

<% semantic_form_for @user_session, :url => user_session_path(:secure => true) do |f| -%>
  <%= f.error_messages %>
  <% f.inputs do -%>
    <%= f.input :login %>
    <%= f.input :password %>
    <%= f.input :remember_me, :as => :boolean, :required => false %>
  <% end -%>
  <p>
    <%= f.submit "Login" %>
  </p>
<% end -%>